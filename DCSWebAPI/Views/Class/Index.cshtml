@model IEnumerable<DCSWebAPI.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Classes</h2>

<p>
    @Html.ActionLink("Create New Class", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.class_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_name)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.class_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.class_name)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.class_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.class_id })
        </td>
    </tr>
}

</table>
